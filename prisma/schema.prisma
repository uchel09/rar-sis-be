enum Role {
  SUPERADMIN
  SCHOOL_ADMIN
  STUDENT
  TEACHER
  PARENT
  STAFF
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  SICK
  PERMISSION
  LATE
  EXCUSED
}

enum Semester {
  SEMESTER_1
  SEMESTER_2
}

//untuk draft baru masuk, pindah sekolah, dan naik kelas

enum DraftStatus {
  PENDING
  APPROVED_PENDING
  APPROVED
  REJECTED
}

enum DraftType {
  NEW_ENROLLMENT
  TRANSFER_UP
  TRANSFER_IN
  TRANSFER_OUT
  GRADUATED
}

enum StaffPosition {
  ADMINISTRATION
  FINANCE
  LIBRARY
  SECURITY
  CLEANING
  FOODCOURT
  SHOP
  BUSINESS
  OTHER
}

// untuk time table 
enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}

// untuk student class history
enum StudentStatus {
  ACTIVE
  GRADUATED
  TRANSFERRED
}

enum Gender {
  MALE
  FEMALE
}
enum Jurusan {
  IPA
  IPS
}

